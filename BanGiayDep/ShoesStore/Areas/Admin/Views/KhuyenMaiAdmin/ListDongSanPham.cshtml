@model Khuyenmai

@{
    ViewData["Title"] = "promotion list";
}

<div class="text-center">
    <h2 class="display-4">Danh sách giày khuyến mãi @Model.Phantramgiam</h2>
</div>
<div style="display: flex; justify-content: space-between; align-items: center; width:100%">
    <!-- Link for creating a new Loai -->
    <a asp-action="AddDongSanPham" asp-controller="KhuyenMaiAdmin" asp-route-makm="@Model.Makm" class="btn btn-primary"><i class="mdi mdi-plus-circle"></i></a>
    
    <div class="row">
        <div class="col-md-6 text-right" style="white-space: nowrap;">
            <a asp-action="Index" asp-controller="KhuyenMaiAdmin" class="btn btn-secondary">Quay lại danh sách khuyến mại</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">Mã số giày</th>
                <th scope="col">Tên giày</th>
                <th scope="col">Danh mục giày dép</th>
                <th scope="col">Giá chưa bán</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var dongsanpham in Model.Madongsanphams)
            {
                <tr>
                    <td>@dongsanpham.Madongsanpham</td>
                    <td>@dongsanpham.Tendongsp</td>
                    <td>@dongsanpham.MaloaiNavigation.Tenloai</td> <!-- Assuming MaloaiNavigation is loaded -->
                    <td>@dongsanpham.Giagoc</td>
                    <!-- Add more cells for additional properties -->
                </tr>
            }
        </tbody>
    </table>
</div>
