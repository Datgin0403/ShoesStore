	<script type="text/javascript">
    // Đợi cho toàn bộ trang được tải xong
    $(document).ready(function () {
        // Kiểm tra xem có phần tử nào với class 'alert-autodismiss' không
        if ($('.alert-autodismiss').length) {
            // Đặt một bộ đếm thời gian
            setTimeout(function () {
                // Sau 5 giây, chọn phần tử đó và cho nó mờ dần đi
                $('.alert-autodismiss').fadeOut(500, function() {
                    // Sau khi mờ xong, xóa hẳn nó khỏi trang web
                    $(this).remove();
                });
            }, 5000); // 5000 mili giây = 5 giây
        }
    });
